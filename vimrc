syntax on
colorscheme kalahari

set relativenumber
set nu rnu
set background=dark
set ruler

imap kj <Esc>

nmap <Tab> :tabn<CR>
nmap <S-Tab> :tabp<CR>
nmap <C-n> :tabnew 
nmap <C-m> :tabclose<CR> 

nmap ] <C-w><C-w>
nmap <C-h>  <C-w>h
nmap <C-l>  <C-w>l
nmap <C-j>  <C-w>j
nmap <C-k>  <C-w>k

nmap <S-k> 5k
nmap <S-j> 5j
nmap <S-h> 5h
nmap <S-l> 5l
